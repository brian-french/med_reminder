<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reminderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Reminder"
        android:layout_gravity="center"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/reminderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a reminder to take your study medication."
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/reminderRecordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have just\ntaken my\nmedication">
        </Button>
        <Button
            android:id="@+id/reminderSnoozeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooze 10 minutes)">
        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/reminderWeek1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEEK 1 - NO\nMEDICATION TAKEN"
        android:layout_gravity="center">
    </Button>

</LinearLayout>
