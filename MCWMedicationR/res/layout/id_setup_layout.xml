<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/IDSetupLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
				
		<TextView android:id="@+id/IDSetupText" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:text="Touch the text field below to enter a participant ID number:"
              android:textSize="20sp"
              android:layout_alignParentTop="true">
        </TextView>
				 
		<EditText android:id="@+id/IDSetupEdit"
			android:text="" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_below="@+id/IDSetupText">
		</EditText>
		
		<ListView android:id="@+id/IDSetupList"
		    	android:visibility="invisible"
				android:choiceMode="singleChoice"
				android:clickable="true"
				android:focusableInTouchMode="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/IDSetupText"
				android:layout_above="@+id/IDSetupCancelButton"
				android:paddingTop="30dp">
		</ListView>
		
