		<Button
		    android:id="@+id/IDSetupCancelButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:minHeight="75px"
		    android:minWidth="125px"
		    android:text="Cancel"
		    android:textSize="20sp" />

		<Button
		    android:id="@+id/IDSetupSaveButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/IDSetupCancelButton"
		    android:layout_alignBottom="@+id/IDSetupCancelButton"
		    android:layout_alignParentRight="true"
		    android:minHeight="75px"
		    android:minWidth="125px"
		    android:text="Save"
		    android:textSize="20sp" />

		<Button
		    android:id="@+id/IDSetupClearButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:text="Erase Configuration"
		    android:textSize="20sp" />

		<TimePicker
		    android:id="@+id/IDSetupTimePicker"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/IDSetupEdit"
		    android:layout_centerHorizontal="true" />

</RelativeLayout>		    

